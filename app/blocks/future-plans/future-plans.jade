include ../form-radio/form-radio

mixin future-plans(plansList, userSkills)
	+b.future-plans&attributes(attributes)
		+e.H2.title Какие у вас планы на будущее?
		+e.P.description Этот ответ ни на что не повлияет. Не беда, если в будущем ваши планы поменяются.
		+e.container
			each item in plansList
				+form-radio(item.title, 'plans', userSkills[item.name])
