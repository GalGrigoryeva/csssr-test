.range-slider
	position relative
	display flex
	flex-direction column
	&::after
		pseudoelement()
		left 0
		right 0
		top: 13px
		width 100%
		height 4px
		background-image url(../images/line-range.png)
		background-repeat repeat-x

.range-slider__input[type="range"]
	-webkit-appearance none
	width 100%
	height 26px
	border-radius 0
	background transparent
	outline 0
	overflow hidden
	cursor pointer

.range-slider__input[type="range"]::-webkit-slider-thumb
	-webkit-appearance none
	position relative
	top: -10px
	border none
	border-radius 0!important
	background-color transparent
	sprite($triangle)
	cursor pointer

::-moz-range-track
	-webkit-appearance none
	width 100%
	height 26px
	border-radius 0
	background transparent
	outline 0
	overflow hidden
	cursor pointer

::-moz-range-thumb
	-webkit-appearance none
	position relative
	top: -10px
	border none
	border-radius 0!important
	background-color transparent
	sprite($triangle)
	cursor pointer

.range-slider__input[type="range"]::-webkit-slider-runnable-track
	background transparent

.range-slider__list-mobile
	position relative
	height 17px
	margin-bottom 10px

.range-slider__list-mobile-item
	position absolute
	font-family pt-sans
	font-size 13px
	line-height 17px
	font-weight 700
	color font-brown
	&::before
		pseudoelement()
		top -11px
		left 2px
		width 3px
		height 7px
		background-color font-brown
	&:first-of-type
		left 0
		&::before
			left 0
			height 10px
	&:nth-child(2)
		left 19%
	&:nth-child(3)
		left 48%
	&:last-of-type
		left 100%
		transform translateX(-8px)
		&::before
			left auto
			right 0
			height 10px

.range-slider__list
	display flex
	flex-grow 1
	flex-direction column
	padding-left 15px
	list-style-type decimal

.range-slider__list-item
	margin-bottom 15px
	&:last-of-type
		margin-bottom 0


@media (min-width: 768px)
	.range-slider
		&::after
			top: 17px
			width calc(100% - 5px)

	.range-slider__input
		height 35px
		margin-bottom 20px

	.range-slider__list-mobile
		display none

	.range-slider__list
		position relative
		padding-left 0
		list-style none

	.range-slider__list-item
		position absolute
		width 168px
		font-family pt-sans
		font-size 13px
		line-height 17px
		font-weight 700
		color font-brown
		margin-bottom 0
		&::before
			pseudoelement()
			top -29px
			left 2px
			width 3px
			height 12px
			background-color font-brown
		&:first-of-type
			left 0
			&::before
				left 0
				height 26px
		&:nth-child(2)
			left 19%
		&:nth-child(3)
			left 48%
		&:last-of-type
			left 100%
			text-align right
			transform translateX(-173px)
			&::before
				left auto
				right 0
				height 26px

