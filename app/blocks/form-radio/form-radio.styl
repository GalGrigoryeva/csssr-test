.form-radio
	position relative
	display flex
	align-items center
	margin-bottom 10px

.form-radio__input
	position absolute
	left 0
	top 0
	opacity 0
	&:checked + .form-radio__indicator
		&::after
			opacity 1

.form-radio__indicator
	position relative
	flex-shrink 0
	sprite($radio)
	margin-right 8px
	&::after
		pseudoelement()
		top 8px
		left 8px
		sprite($radio_mark)
		opacity 0
		transition opacity 0.2s ease

.form-radio__title
	font-family pt-sans
	font-size 16px
	line-height 20px
	font-weight 700
	color black

@media (min-width: 768px)
	.form-radio
		align-items flex-start
		margin-bottom 0
		margin-right 16px
		&:nth-child(2),
		&:nth-child(3)
			margin-right 21px
		&:last-of-type
			margin-right 0

	.form-radio__title
		font-size 20px
		line-height 25px
